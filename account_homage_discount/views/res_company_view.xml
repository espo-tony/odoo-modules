<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
       <record id="view_company_discount_form" model="ir.ui.view">
            <field name="name">res.company.discount.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page string="Homage &amp; Discount Configuration">
                        <div>
	                        <label for="homage_untaxed_account_id" />
	                        <field name="homage_untaxed_account_id" required="1"/>
	                        <label for="homage_tax_account_id" />
	                        <field name="homage_tax_account_id" required="1"/>
	                        <label for="homage_goods_account_id"/>
	                        <field name="homage_goods_account_id" required="1"/>
	                        <label for="homage_tax_id" />
	                        <field name="homage_tax_id" />	                    
		                    <label for="discount_untaxed_account_id" />
		                    <field name="discount_untaxed_account_id" required="1"/>
		                    <label for="discount_tax_account_id" />
		                    <field name="discount_tax_account_id" required="1"/>
                        </div>
                    </page>
                </notebook>
            </field>
        </record>
    </data>
</openerp>
